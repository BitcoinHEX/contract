{
    "extends": "solium:all",
    "plugins": [
        "security"
    ],
    "rules": {
        "array-declarations": "error",
        "blank-lines": "error",
        "camelcase": "error",
        "deprecated-suicide": "error",
        "imports-on-top": "error",
        "indentation": [
            "error",
            2
        ],
        "lbrace": "error",
        "mixedcase": "warning",
        "no-empty-blocks": "error",
        "no-unused-vars": "error",
        "operator-whitespace": "error",
        "pragma-on-top": "error",
        "uppercase": "off",
        "variable-declarations": "error",
        "whitespace": "error"
    }
}